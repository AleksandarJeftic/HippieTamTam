@model HippieTamTam.Models.Post
@*header*@

<header class="blog-featured" style="background:url(@Url.Content(Model.PostBackground) )@Url.Content(Model.PostBackgroundColor);">
    <div class="b-container">
        <div class="headline">
            <h1>Vi ste super muškarac ili super žena u svakom trenutku. </h1>
            <p class="meta">
                <span>hippie_tamtam</span>
                &nbsp;|&nbsp; @Model.PostDateCreated.ToString("MMM d, yyyy")
            </p>
        </div>
    </div>
</header>

@*header end*@

@*social networks*@
<section class="share-this-post">
    
</section>
@*social networks end*@

@*post content*@

<section id="post-content" class="b-container">

    <div class="blog-post">
        <p>
            @Model.PostSubhead1
        </p>
        <p>
            @Model.PostText1
        </p>
        <p>
            @Model.PostText2
        </p>
        <blockquote>
            @Model.PostQuote1
        </blockquote>
    </div>
</section>
@*post content end*@

