<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title></title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />

    <script src="~/Scripts/modernizr-2.6.2.js"></script>
</head>
<body>

    @RenderBody()
    @*header*@

    <header class="blog-featured" style="background:url(@Url.Content(Model.PostBackground) )@Model.PostBackgroundColor;">
        <div class="b-container">
            <div class="headline">
                <h1>@Model.PostTitle </h1>
                <p class="meta">
                    <span>@Model.PostAuthor</span>
                    &nbsp;|&nbsp; @Model.PostDateCreated.ToString("MMM d, yyyy")
                </p>
            </div>
        </div>
    </header>

    @*header end*@

    @*social networks*@
    <section class="share-this-post"></section>
    @*social networks end*@

    @*post content*@

    <section id="post-content" class="b-container">

        <div class="blog-post">
            
            <p class="poem">
                @Html.Raw(Model.PostText1)
            </p>
            <p class="poem">
                @Html.Raw(Model.PostText2)
            </p>
            <p class="poem">
                @Html.Raw(Model.PostText3)
            </p>
            <p class="poem">
                @Html.Raw(Model.PostText4)
            </p>
            
        </div>
    </section>
    @*post content end*@

    @*most popular section*@
    <section class="most-popular">
        <div class="most-popular-container">
            <header>
                <h2>
                    <span>najpopularnije</span>
                </h2>
            </header>
            <div class="row-flex">
                <div class="col-md-4 col-sm-4 col-lg-4 col-xs-6 post">
                    <a href="@Url.Action("Post","BlogPost")" class="post-box">
                        <figure>
                            <img src="~/Images/employee-identity.png" class="post-img" />
                        </figure>
                        <p>
                            <span class="category">
                                Afirmacije
                            </span>
                            <br>
                            Vi ste super muškarac ili super žena u svakom trenutku.

                        </p>
                    </a>
                </div>
                <div class="col-md-4 col-sm-4 col-lg-4 col-xs-6 post">
                    <a href="#" class="post-box">
                        <figure>
                            <img src="~/Images/brand-strategy.png" class="post-img" />
                        </figure>
                        <p>
                            <span class="category">
                                Afirmacije
                            </span>
                            <br>
                            Ljubav koja počiva na plemenitim motivima,
                            traje večno.

                        </p>
                    </a>
                </div>
                <div class="col-md-4 col-sm-4 col-lg-4 col-xs-6 post">
                    <a href="#" class="post-box">
                        <figure>
                            <img src="~/Images/insincere-support.png" class="post-img" />
                        </figure>
                        <p>
                            <span class="category">
                                Afirmacije
                            </span>
                            <br>
                            Vole cure kad Brkovi Zare i Goci.

                        </p>
                    </a>
                </div>
            </div>
        </div>
    </section>
    @*most popular end*@


    @*footer start*@

    <footer class="b-footer">
        <div class="b-container">

        </div>
    </footer>

    @*footer end*@
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>